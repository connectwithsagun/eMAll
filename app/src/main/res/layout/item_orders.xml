<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLyt"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/margin"
        app:cardCornerRadius="4dp">






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLyt1"
            android:background="@color/secodary">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cv2"
                app:cardCornerRadius="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/imgProduct"
                    android:src="@drawable/username_icon">

                </ImageView>





            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women's Jacket"
                android:id="@+id/tvProductTitle"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/heading"
                android:layout_toRightOf="@+id/cv2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pangeni Traders"
                android:textSize="@dimen/description"
                android:id="@+id/tvSupplierName"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/cv2"
                android:layout_below="@+id/tvProductTitle"
                android:layout_marginLeft="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status : "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/description"
                android:id="@+id/tvProductStatus"
                android:layout_toRightOf="@+id/cv2"
                android:layout_below="@+id/tvSupplierName"
                android:layout_marginLeft="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/description"
                android:id="@+id/tvProductStatusResult"
                android:layout_toRightOf="@+id/tvProductStatus"
                android:layout_below="@+id/tvSupplierName"
                android:layout_marginLeft="0dp"/>






        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>