<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLyt"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cv1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        app:cardCornerRadius="4dp">






        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLyt1"
            android:paddingBottom="3dp"
            android:background="@color/secodary">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cv2"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/imgSupplier"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/laptop">

                </ImageView>





            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pangeni Traders"
                android:id="@+id/tvSupplierName"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/heading"
                android:layout_below="@+id/cv2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gaindakot, Nawalpur"
                android:textSize="@dimen/description"
                android:id="@+id/tvSupplierAddress"
                android:textColor="@color/black"
                android:layout_below="@+id/tvSupplierName"
                android:layout_marginLeft="20dp"/>









        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>