<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CheckOutActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/cv1"
        android:layout_marginHorizontal="@dimen/margin">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debid Magar"
        android:drawableLeft="@drawable/id_icon"
        android:drawablePadding="10dp"
        android:textSize="@dimen/heading"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Syangja"
        android:drawableLeft="@drawable/home_icon"
        android:drawablePadding="10dp"
        android:textSize="@dimen/heading"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gaindakot-2, Nawalpur"
        android:drawableLeft="@drawable/location_icon"
        android:drawablePadding="10dp"
        android:textSize="@dimen/heading"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9805485022"
        android:drawableLeft="@drawable/phone_icon"
        android:drawablePadding="10dp"
        android:textSize="@dimen/heading"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="debidmagar@gmail.com"
        android:drawableLeft="@drawable/mail_icon"
        android:drawablePadding="10dp"
        android:textSize="@dimen/heading"
        />

</LinearLayout>




    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product"
        android:layout_below="@+id/cv1"
        android:textSize="@dimen/heading"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/margin"
        android:textColor="@color/black"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv2"
        android:layout_below="@+id/cv1"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="@color/secodary"
        app:cardCornerRadius="4dp"
        android:layout_marginHorizontal="@dimen/margin">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/jacket"
                android:id="@+id/image"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skirt for girls"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/margin"
                android:textSize="@dimen/description"
                />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 900"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:layout_marginHorizontal="@dimen/margin"
                        android:textSize="@dimen/description"
                        />




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qty : 1"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:padding="2dp"
                            android:layout_marginLeft="100dp"
                            android:textSize="@dimen/description"
                            tools:ignore="MissingConstraints" />






                </LinearLayout>



        </LinearLayout>

        </LinearLayout>







    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv3"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/margin"
        app:cardBackgroundColor="@color/secodary"
        android:layout_below="@+id/cv2"
        app:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items (1) Total : "
                android:textColor="@color/black"
                android:padding="2dp"
                android:layout_marginLeft="24dp"
                android:textSize="@dimen/heading"

              />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 900"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="2dp"
                android:textSize="@dimen/description"
                />



        </LinearLayout>





    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv4"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/margin"
        app:cardBackgroundColor="@color/secodary"
        android:layout_below="@+id/cv3"
        app:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtotal "
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:layout_marginHorizontal="@dimen/margin"
                    android:textSize="@dimen/heading"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipping fee"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:layout_marginHorizontal="@dimen/margin"
                    android:textSize="@dimen/heading"

                    />



            </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 900"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginLeft="140dp"
                android:textSize="@dimen/description"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 600"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_marginLeft="140dp"
                android:textSize="@dimen/description"
                />



        </LinearLayout>
        </LinearLayout>






    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total : Rs. 1800"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/tvTotal"
        android:layout_marginTop="60dp"
        android:layout_marginStart="265dp"
        android:layout_marginHorizontal="@dimen/margin"
        android:layout_below="@+id/cv4"
        android:layout_marginLeft="260dp" />

<!--    android:gravity="right"-->
<!--    android:layout_alignParentEnd="true"-->
<!--    android:layout_alignParentRight="true"-->

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvTotal"
    android:background="@drawable/edit_text_bg"
    android:text="proceed to pay"
    android:textStyle="bold"
    android:layout_marginTop="20dp"
    android:textSize="@dimen/button_size"
    android:layout_marginHorizontal="@dimen/margin"
    />



</RelativeLayout>